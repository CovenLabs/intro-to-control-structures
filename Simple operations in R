# find the values of x1&x2 using a quadratic equation

A <- 1
B <- 5
C <- 3
ada <- (2*A)
bumi<- (B^2)-(4*(A*C))
bee <- sqrt(bumi)
Xi <- (-B+bee)/ada
Xii <- (-B-bee)/ada
print(Xi)
print(Xii)

###how to convert from one class to the other 
sexx <-("male, female, female, female, female, male")
s1 <- c(male,female,female,female,female,male)
print(s1)
class(sexx)
fruddle <- as.data.frame(sexx)
wilfred <- c(11,22,33,44,55,66,77,88,99,121)
fruits <- as.numeric(sexx)
class(fruits)
as.data.frame()
dim(wilfred)
scoree <- as.integer(wilfred)
class(scoree)
